	@echo "==== Building proland_terrain_exercise4 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f proland_terrain_exercise4.make

proland_terrain_exercise5: ork proland
	@echo "==== Building proland_terrain_exercise5 ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f proland_terrain_exercise5.make

clean:
	@${MAKE} --no-print-directory -C . -f ork.make clean
	@${MAKE} --no-print-directory -C . -f proland.make clean
	@${MAKE} --no-print-directory -C . -f proland_terrain_exercise3.make clean
	@${MAKE} --no-print-directory -C . -f proland_terrain_exercise4.make clean
	@${MAKE} --no-print-directory -C . -f proland_terrain_exercise5.make clean

